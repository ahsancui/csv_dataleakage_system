<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadFileActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_choose_btn"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/danger"
        android:backgroundTintMode="src_over"
        android:drawableLeft="@drawable/ic_round_attach_file_80"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Choose csv file"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_file_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/secondary"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/upload_choose_btn"
        app:layout_constraintStart_toStartOf="@+id/upload_choose_btn"
        app:layout_constraintTop_toBottomOf="@+id/upload_choose_btn" />

    <TextView
        android:id="@+id/file_upload_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/danger"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/upload_file_btn"
        app:layout_constraintStart_toStartOf="@+id/upload_file_btn"
        app:layout_constraintTop_toBottomOf="@+id/upload_file_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>